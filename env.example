# =============================================================================
# CREDORA - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values as needed
# cp env.example .env

# Postgres database related vars
DB_USER: postgres
DB_PASSWORD: postgres
DB_NAME: postgres
DB_HOST: localhost
DB_PORT: 5432

# JWT related vars
JWT_SECRET: secret
JWT_REFRESH_SECRET: refresh_secret
JWT_EXPIRES_IN: 15m
JWT_REFRESH_EXPIRES_IN: 7d

# Password Hashing
BCRYPT_ROUNDS: 12